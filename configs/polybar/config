[module/wallch]
type = custom/script
format = <label>
format-underline = ${colors.secondary}
label = "  "
exec = ''
tail = true
click-left = exec sl screen:set-wallpaper

[module/taskwarrior]
interval = 10
type = custom/script
exec = $HOME/.config/polybar/scripts/taskwarrior.sh
format = <label>
format-foreground = #FFF
format-prefix = " "
click-left = task "$((`cat /tmp/tw_polybar_id`))" done

[module/battery]
type = internal/battery
full-at = 99
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M
; <label-charging> <bar-capacity> <ramp-capacity> <animation-charging>
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.secondary}
; <label-discharging> (default) <bar-capacity> <ramp-capacity> <animation-discharging>
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.secondary}
; <label-full> (default) <bar-capacity> <ramp-capacity>
format-full = <ramp-capacity> <label-full>
; %percentage% (default) %time% %consumption% (shows current charge rate in watts)
label-charging = %percentage%%
label-discharging =  %percentage%%
label-full = Fully charged
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
bar-capacity-width = 10
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-framerate = 500

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix = "  "
format-underline = ${colors.secondary}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-underline = ${colors.secondary}
label = %percentage_used%%
click-left = exec htop

[module/swap]
type = custom/script
cmunterval = 2
exec = free | grep 'Swap' | awk '{used = $3; free = $4; print int((used/(used+free)*100))}'
label = "  %output%%"
format-underline = ${colors.secondary}

[module/cmus]
type = custom/script
exec = sh ~/.config/polybar/scripts/cmus.sh
exec-if = pgrep -x cmus
interval = 1
click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/backlight]
type = internal/xbacklight
output = eDP1
enable-scroll = true
format = <ramp>  <label>
format-underline = ${colors.secondary}
label = %percentage%%
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/fs-root]
type = internal/fs
