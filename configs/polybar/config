[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
secondary = ${xrdb:secondary}
underline = ${xrdb:active}

[bar/default]
monitor = ${env:MONITOR:}
height = 32
offset-y = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 3
module-margin = 2

font-0 = SF Pro Text:size=10;2
; font-1 = FontAwesome:size=10;2
font-1 = NotoSansMono Nerd Font:size=10;2
font-2 = xos4 Terminus:size=12:weight=bold;2
font-3 = Material Icons:size=13;2


[bar/mono]
inherit = bar/default
modules-left = i3 eth wireless-network xwindow
modules-right = wallch cpu temperature memory swap fs-root pulseaudio backlight powermenu
modules-center = date time-paris time-montreal
tray-position = right
tray-detached = false
tray-padding = 0

[bar/dual_left]
inherit = bar/default
modules-left = i3 wireless-network angular grunt mpd
modules-right = taskwarrior cpu memory swap fs-root fs-home fs-storage
modules-center = xwindow
tray-position = right
tray-detached = false
tray-padding = 0

[bar/dual_right]
inherit = bar/default
modules-left = i3
modules-center = date time-paris time-montreal
modules-right = mpd archupdate wallch volume powermenu

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

