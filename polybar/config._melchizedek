; Doc: https://github.com/jaagr/polybar
; Wiki: https://github.com/jaagr/polybar/wiki

[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
secondary = ${xrdb:secondary}
underline = ${xrdb:active}

[bar/default]
height = 32
offset-y = 0
top = true
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
padding-left = 0
padding-right = 3
module-margin = 2
font-0 = xos4terminus:size=10;2
font-1 = FontAwesome:size=10;2
modules-left = i3
; modules-center = xwindow
modules-right = archupdate wallch wireless cpu memory swap filesystem temperature backlight battery volume date powermenu
tray-position = right
desactivated modules : spotify


[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
format = <label-mode><label-state>
label-mode-padding = 2
label-mode-underline = ${colors.underline}
label-focused = %index%  %icon%
label-focused-foreground = ${colors.underline}
label-focused-underline = ${colors.underline}
label-focused-padding = 2
label-unfocused = %index%  %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground}
label-unfocused-underline = ${colors.secondary}
label-visible = %index%  %icon%
label-visible-underline = ${colors.foreground}
label-visible-padding = 2
label-urgent = %index%  %icon%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.underline}
label-urgent-underline = ${colors.underline}
label-urgent-padding = 2

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

[module/archupdate]
type = custom/script
interval = 120
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = .config/polybar/scripts/archupdate.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
; click-left = urxvt -e "pacaur -Syyua --noconfirm --noedit"

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = " %percentage_used%%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.secondary}
label-mounted-underline = ${colors.secondary}

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix = "  "
format-underline = ${colors.secondary}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-underline = ${colors.secondary}
label = %percentage_used%%

[module/wallch]
type = custom/script
format = <label>
format-underline = ${colors.secondary}
label = "  "
exec = ''
tail = true
click-left = exec ~/.config/i3/scripts/set-wallpaper.sh

[module/swap]
type = custom/script
interval = 2
exec = free -m | grep 'Swap' | awk '{used = $3; free = $4; print int(used/(used+free)*100)}'
format = <label>
format-prefix = " "
format-suffix = "%"
format-underline = ${colors.secondary}
label = "%output:0:30%"

[module/date]
type = internal/date
interval = 5
date = %B %d,
time = %H:%M
label =   %date% %time%
format-underline = ${colors.secondary}

[module/volume]
type = internal/volume
format-volume = <ramp-volume>  <label-volume>
format-muted =  
label-volume = %percentage%%
label-volume-underline = ${colors.secondary}
format-volume-underline = ${colors.secondary}
label-muted-underline = ${colors.secondary}
format-muted-underline = ${colors.secondary}
label-muted = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/wired]
type = internal/network
interface = eth0
format-connected = <label-connected>
format-connected-underline = ${colors.secondary}
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.underline}
label-connected =  %local_ip%
label-disconnected = 

[module/wireless]
type = internal/network
interface = wlp2s0
interval = 1
ping-interval = 3
accumulate-stats = true
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
format-connected-underline = ${colors.foreground}
format-disconnected-underline = ${colors.secondary}
label-connected = %essid%%downspeed:9%
label-disconnected = 
label-disconnected-foreground = ${colors.secondary}
ramp-signal-0 = 😱
ramp-signal-1 = 😠
ramp-signal-2 = 😒
ramp-signal-3 = 😊
ramp-signal-4 = 😃
ramp-signal-5 = 😈

[module/powermenu]
type = custom/menu
label-active-font = 1
format-spacing = 1
label-open = "    "
label-open-underline = ${colors.secondary}
label-close = 
label-close-foreground = #E20049
label-separator = |
label-separator-foreground = ${colors.secondary}
menu-0-0 = reboot
menu-0-0-foreground = #FFCC66
menu-0-0-exec = reboot
menu-0-1 = power off
menu-0-1-foreground = #FFCC66
menu-0-1-exec = poweroff

[module/spotify]
type = custom/script
exec-if = ~/.config/polybar/spotify.sh --isPlaying
exec = ~/.config/polybar/spotify.sh --title
click-left = i3-msg workspace 8
interval = 5
format=   <label>
format-foreground=#00D965
format-underline = #00D965
label = %output%

[module/battery]
type = internal/battery
full-at = 99
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 5
Additional formatting
time-format = %Hh%M
format-charging = " <animation-charging> <label-charging> "
format-discharging = " <ramp-capacity> <label-discharging> "
format-full = " <ramp-capacity> "
; label-charging = %percentage%% %time% %consumption%W
; label-discharging = %percentage%% %time% %consumption%W
label-charging = %percentage%% %time%
label-discharging = %percentage%% %time%
format-charging-underline = ${colors.secondary}
format-discharging-underline = ${colors.secondary}
format-full-underline = ${colors.foreground}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 60

[module/backlight]
type = internal/xbacklight
; Use "xrandr" command to list outputs
output = eDP1
format = <ramp> <label>
format-underline = ${colors.secondary}
label = %percentage%%
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
